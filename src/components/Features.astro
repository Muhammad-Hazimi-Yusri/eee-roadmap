---
const features = [
  {
    title: 'Structured Path',
    description: 'Topics organized in logical order with prerequisites. Know what to learn next.',
  },
  {
    title: 'Rich Notes',
    description: 'Markdown with LaTeX equations, embedded images, and PDFs. Drag, resize, minimize.',
  },
  {
    title: 'Track Progress',
    description: 'Mark concepts complete or important. Swipe with stylus or click. Synced locally.',
  },
  {
    title: 'Open Source',
    description: 'MIT licensed. Fork it, customize it, self-host it. Built in public.',
  },
];
---

<section class="section" id="features">
  <div class="container">
    <div class="mb-6">
      <p class="section-num">02</p>
      <h2 class="text-xl sm:text-2xl">What This Is</h2>
    </div>

    <div class="features-grid">
      {features.map((feature, index) => (
        <div class="feature-item" data-index={index}>
          <h3 class="text-[0.9375rem] font-semibold mb-1">{feature.title}</h3>
          <p class="text-sm text-muted">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .features-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .features-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .feature-item {
    padding: 1rem 0;
    border-bottom: 1px dotted var(--color-border);
  }

  .feature-item:last-child {
    border-bottom: none;
  }

  @media (min-width: 640px) {
    .feature-item {
      border-bottom: none;
      border-left: 1px dotted var(--color-border);
      padding: 0 0 0 1.25rem;
    }

    .feature-item[data-index="0"] {
      border-left: none;
      padding-left: 0;
    }
  }

  @media (min-width: 1024px) {
    .feature-item[data-index="2"] {
      border-left: 1px dotted var(--color-border);
      padding-left: 1.25rem;
    }
  }
</style>

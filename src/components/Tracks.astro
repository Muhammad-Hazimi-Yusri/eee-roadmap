---
import { internalHref } from '../utils/url';
import { getFeaturedTracks } from '../data';
import * as LucideIcons from '@lucide/astro';

const featuredTracks = getFeaturedTracks();

// Helper to get icon component by name
function getIcon(iconName: string) {
  // Convert kebab-case to PascalCase (e.g., 'grid-3x3' → 'Grid3x3')
  const pascalName = iconName
    .split('-')
    .map(part => part.charAt(0).toUpperCase() + part.slice(1))
    .join('');
  
  return (LucideIcons as any)[pascalName] || LucideIcons.HelpCircle;
}
---

<section class="section" id="roadmaps">
  <div class="container">
    <div class="mb-6">
      <p class="section-num">01</p>
      <h2 class="text-xl sm:text-2xl">Learning Tracks</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {featuredTracks.map(({ slug, meta }) => {
        const IconComponent = getIcon(meta.icon);
        return (
          <article class="track" data-level={slug}>
            <div class="flex items-center gap-3 mb-3">
              <IconComponent class="w-6 h-6 flex-shrink-0" />
              <h3 class="text-base font-semibold">{meta.title}</h3>
            </div>
            
            <p class="text-sm text-muted mb-4">
              {meta.description}
            </p>
            
            <a href={internalHref(`roadmaps/${slug}`)} class="font-mono text-[0.8125rem]">
              View roadmap →
            </a>
          </article>
        );
      })}
    </div>

    <div class="mt-8 text-center">
      <a href={internalHref('roadmaps')} class="font-mono text-sm text-muted hover:text-copper">
        Browse all tracks →
      </a>
    </div>
  </div>
</section>

<style>
  /* Notebook-themed track cards */
  .track {
    border: 1px solid var(--color-border);
    padding: 1.25rem;
    position: relative;
    background: rgba(255, 255, 255, 0.6);
    transition: transform 0.2s, box-shadow 0.2s;
  }

  /* Notebook paper lines effect */
  .track::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: repeating-linear-gradient(
      transparent,
      transparent 1.5rem,
      rgba(0, 0, 0, 0.03) 1.5rem,
      rgba(0, 0, 0, 0.03) calc(1.5rem + 1px)
    );
    pointer-events: none;
    opacity: 0.5;
  }

  .track:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.12);
  }

  /* Color-coded left border - uses data-level from HTML */
  .track::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background-color: var(--color-copper);
    transition: width 0.2s;
  }

  .track:hover::before {
    width: 6px;
  }

  .track[data-level="core"]::before {
    background-color: var(--color-pcb);
  }

  .track[data-level="advanced"]::before {
    background-color: var(--color-text);
  }

  /* Dark mode */
  :global(.dark) .track {
    background: rgba(0, 0, 0, 0.3);
  }

  :global(.dark) .track::after {
    background: repeating-linear-gradient(
      transparent,
      transparent 1.5rem,
      rgba(255, 255, 255, 0.03) 1.5rem,
      rgba(255, 255, 255, 0.03) calc(1.5rem + 1px)
    );
  }

  :global(.dark) .track:hover {
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
  }
</style>
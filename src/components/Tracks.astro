---
import { internalHref } from '../utils/url';
import { getFeaturedTracks } from '../data';
import * as LucideIcons from '@lucide/astro';

const featuredTracks = getFeaturedTracks();

// Helper to get icon component by name
function getIcon(iconName: string) {
  // Convert kebab-case to PascalCase (e.g., 'grid-3x3' → 'Grid3x3')
  const pascalName = iconName
    .split('-')
    .map(part => part.charAt(0).toUpperCase() + part.slice(1))
    .join('');
  
  return (LucideIcons as any)[pascalName] || LucideIcons.HelpCircle;
}
---

<section class="section" id="roadmaps">
  <div class="container">
    <div class="mb-6">
      <p class="section-num">01</p>
      <h2 class="text-xl sm:text-2xl">Learning Tracks</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {featuredTracks.map(({ slug, meta }) => {
        const IconComponent = getIcon(meta.icon);
        return (
          <article class="track" data-level={slug}>
            <div class="flex items-center gap-3 mb-3">
              <IconComponent class="w-6 h-6 flex-shrink-0" />
              <h3 class="text-base font-semibold">{meta.title}</h3>
            </div>
            
            <p class="text-sm text-muted mb-4">
              {meta.description}
            </p>
            
            <a href={internalHref(`roadmaps/${slug}`)} class="font-mono text-[0.8125rem]">
              View roadmap →
            </a>
          </article>
        );
      })}
    </div>


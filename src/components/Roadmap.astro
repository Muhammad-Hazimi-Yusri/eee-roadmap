---
// src/components/Roadmap.astro

interface Props {
  sections: import('../types/roadmap').RoadmapSection[];
}

const { sections } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---
<div class="roadmap-settings" id="roadmap-settings">
  <button class="settings-toggle" id="settings-toggle">
    <span class="toggle-text">Preferences</span>
    <svg class="toggle-chevron" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M6 9l6 6 6-6"/>
    </svg>
  </button>
  <div class="settings-panel" id="settings-panel">
    <label class="prereq-link-setting">
      <span class="setting-label">Open prereqs in:</span>
      <select id="prereq-link-behavior">
        <option value="smart">New tab if different track</option>
        <option value="same-tab">Always same tab</option>
        <option value="new-tab">Always new tab</option>
      </select>
    </label>
  </div>
</div>

<div class="roadmap">
  {sections.map((section) => (
    <div class="roadmap-section">
      <h3 class="section-title">{section.title}</h3>
      
      <div class="roadmap-track">
        {section.items.map((item, index) => (
          <div 
            class={`roadmap-node ${item.optional ? 'roadmap-node--optional' : ''}`}
            id={item.id}
            data-node-id={item.id}
          >
            <button class="node-button" aria-expanded="false">
              <span class="node-dot"></span>
              <span class="node-title">{item.title}</span>
            </button>
            
            <div class="node-content" hidden>
              <p class="node-description">{item.description}</p>

              {item.prerequisites && item.prerequisites.length > 0 && (
                <div class="node-prereqs">
                  <span class="prereqs-label">Prerequisites:</span>
                  {item.prerequisites.map((prereq) => {
                    const parts = prereq.split('/');
                    const isLinkable = parts.length >= 2;
                    if (isLinkable) {
                      const [track, id, ...displayParts] = parts;
                      const displayName = displayParts.length > 0 
                        ? displayParts.join('/') 
                        : id.replace(/-/g, ' ');
                      return (
                        <a 
                          href={`${Astro.url.origin}/roadmaps/${track}#${id}`} 
                          class="prereq-tag prereq-tag--link"
                          data-prereq-topic={id}
                        >
                          {displayName}
                        </a>
                      );
                    }
                    return (
                      <span 
                        class="prereq-tag prereq-tag--static" 
                        data-static-prereq={prereq}
                      >
                        {prereq}
                      </span>
                    );
                  })}
                </div>
              )}

              {item.outcomes && item.outcomes.length > 0 && (
                <div class="node-outcomes">
                  <span class="outcomes-label">You'll learn to:</span>
                    <ul class="outcomes-list">
                      {item.outcomes.map((outcome) => (
                        <li class="outcome-item">{outcome}</li>
                      ))}
                    </ul>
                </div>
              )}

              {item.concepts && item.concepts.length > 0 && (
                <ul class="node-concepts">
                  {item.concepts.map((concept) => (
                    <li 
                      data-topic-id={item.id}
                      data-concept={concept}
                      class="concept-pill"
                    >{concept}</li>
                  ))}
                </ul>
              )}
              {item.resources && item.resources.length > 0 && (
              <div class="node-resources">
                <span class="resources-label">Resources:</span>
                {item.resources.map((r) => (
                  <a href={r.url} target="_blank" rel="noopener noreferrer" class="resource-link">{r.label}</a>
                ))}
              </div>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>
  ))}
</div>

<script>
  // ============================================
  // STORAGE UTILS
  // ============================================
  const STORAGE_KEY = 'eee-progress-v2';

  interface ProgressState {
    complete: string[];  // ["topicId:concept", ...]
    important: string[]; // ["topicId:concept", ...]
  }

  function getProgress(): ProgressState {
    const saved = localStorage.getItem(STORAGE_KEY);
    return saved ? JSON.parse(saved) : { complete: [], important: [] };
  }

  function saveProgress(progress: ProgressState) {
    localStorage.setItem(STORAGE_KEY, JSON.stringify(progress));
  }

  function isComplete(key: string): boolean {
    return getProgress().complete.includes(key);
  }

  function isImportant(key: string): boolean {
    return getProgress().important.includes(key);
  }

  function toggleComplete(key: string): boolean {
    const progress = getProgress();
    if (progress.complete.includes(key)) {
      progress.complete = progress.complete.filter(k => k !== key);
      saveProgress(progress);
      return false;
    } else {
      progress.complete.push(key);
      saveProgress(progress);
      return true;
    }
  }

  function toggleImportant(key: string): boolean {
    const progress = getProgress();
    if (progress.important.includes(key)) {
      progress.important = progress.important.filter(k => k !== key);
      saveProgress(progress);
      return false;
    } else {
      progress.important.push(key);
      saveProgress(progress);
      return true;
    }
  }

  function resetState(key: string) {
    const progress = getProgress();
    progress.complete = progress.complete.filter(k => k !== key);
    progress.important = progress.important.filter(k => k !== key);
    saveProgress(progress);
  }

  // ============================================
  // NODE EXPANSION
  // ============================================
  function expandNode(id: string) {
    const node = document.getElementById(id);
    if (!node) return;
    
    const btn = node.querySelector('.node-button');
    const content = node.querySelector('.node-content') as HTMLElement;
    
    if (btn && content) {
      btn.setAttribute('aria-expanded', 'true');
      content.hidden = false;
    }
  }

  function initNodeToggles() {
    document.querySelectorAll('.node-button').forEach((btn) => {
      btn.addEventListener('click', () => {
        const expanded = btn.getAttribute('aria-expanded') === 'true';
        const content = btn.nextElementSibling as HTMLElement;
        
        btn.setAttribute('aria-expanded', String(!expanded));
        content.hidden = expanded;
      });
    });
  }

  function initHashNavigation() {
    // Auto-expand on page load if hash exists
    if (window.location.hash) {
      expandNode(window.location.hash.slice(1));
    }

    // Handle hash changes (same-page navigation)
    window.addEventListener('hashchange', () => {
      if (window.location.hash) {
        expandNode(window.location.hash.slice(1));
      }
    });

    // Handle prereq link clicks (fixes re-click on same hash)
    document.querySelectorAll('.prereq-tag--link').forEach((link) => {
      link.addEventListener('click', () => {
        const href = link.getAttribute('href') || '';
        const hash = href.split('#')[1];
        if (hash && window.location.hash === `#${hash}`) {
          expandNode(hash);
        }
      });
    });
  }

  // ============================================
  // PROGRESS TRACKING
  // ============================================
  function isTopicCompleted(topicId: string): boolean {
    const node = document.querySelector(`[data-node-id="${topicId}"]`);
    if (!node) return false;
    
    const pills = node.querySelectorAll('.concept-pill');
    if (pills.length === 0) return false;
    
    return Array.from(pills).every(pill => {
      const concept = pill.getAttribute('data-concept');
      return isComplete(`${topicId}:${concept}`);
    });
  }

  function updateTopicStatus(topicId: string) {
    const node = document.querySelector(`[data-node-id="${topicId}"]`);
    if (!node) return;
    
    node.classList.toggle('topic--completed', isTopicCompleted(topicId));
  }

  function updatePrereqCompletionStatus() {
    document.querySelectorAll('.prereq-tag--link[data-prereq-topic]').forEach((link) => {
      const topicId = link.getAttribute('data-prereq-topic');
      if (!topicId) return;
      
      link.classList.toggle('prereq--completed', isTopicCompleted(topicId));
    });
  }

  function initStaticPrereqs() {
    document.querySelectorAll('.prereq-tag--static[data-static-prereq]').forEach((tag) => {
      const prereq = tag.getAttribute('data-static-prereq');
      if (!prereq) return;
      
      const key = `static:${prereq}`;
      
      // Set initial state
      if (isComplete(key)) {
        tag.classList.add('prereq--completed');
      }
      
      // Click handler
      tag.addEventListener('click', () => {
        const completed = toggleComplete(key);
        tag.classList.toggle('prereq--completed', completed);
      });
    });
  }

  function initProgressTracking() {
    document.querySelectorAll('.concept-pill').forEach((pill) => {
      const topicId = pill.getAttribute('data-topic-id');
      const concept = pill.getAttribute('data-concept');
      if (!topicId || !concept) return;
      
      const key = `${topicId}:${concept}`;
      
      // Set initial state
      if (isComplete(key)) {
        pill.classList.add('concept--completed');
      }
      if (isImportant(key)) {
        pill.classList.add('concept--important');
      }
      updateTopicStatus(topicId);
      
      // Simple mode: click = notes, dblclick = complete, shift+click = important
      pill.addEventListener('click', (e) => {
        const event = e as MouseEvent;
        if (event.shiftKey) {
          // Shift+Click → toggle important
          const important = toggleImportant(key);
          pill.classList.toggle('concept--important', important);
        } else {
          // Click → open notes (placeholder for now)
          console.log('Open notes for:', key);
        }
      });

      pill.addEventListener('dblclick', () => {
        // Double-click → toggle complete
        const completed = toggleComplete(key);
        pill.classList.toggle('concept--completed', completed);
        updateTopicStatus(topicId);
        updatePrereqCompletionStatus();
      });
    });
    
    updatePrereqCompletionStatus();
  }

  // ============================================
  // PREREQ LINK BEHAVIOR
  // ============================================
  function applyPrereqBehavior(behavior: string) {
    const currentPath = window.location.pathname;
    const currentTrack = currentPath.match(/\/roadmaps\/(\w+)/)?.[1] || '';

    document.querySelectorAll('.prereq-tag--link').forEach((link) => {
      const href = link.getAttribute('href') || '';
      const linkTrack = href.match(/\/roadmaps\/(\w+)/)?.[1] || '';
      
      let openInNewTab = false;
      
      if (behavior === 'new-tab') {
        openInNewTab = true;
      } else if (behavior === 'smart') {
        openInNewTab = linkTrack !== currentTrack;
      }

      if (openInNewTab) {
        link.setAttribute('target', '_blank');
        link.setAttribute('rel', 'noopener noreferrer');
      } else {
        link.removeAttribute('target');
        link.removeAttribute('rel');
      }
    });
  }

  function initPrereqBehavior() {
    const prereqSelect = document.getElementById('prereq-link-behavior') as HTMLSelectElement;
    if (!prereqSelect) return;

    const savedBehavior = localStorage.getItem('prereq-link-behavior') || 'smart';
    prereqSelect.value = savedBehavior;
    applyPrereqBehavior(savedBehavior);

    prereqSelect.addEventListener('change', () => {
      const value = prereqSelect.value;
      localStorage.setItem('prereq-link-behavior', value);
      applyPrereqBehavior(value);
    });
  }

  // ============================================
  // SETTINGS PANEL
  // ============================================
  function initSettingsPanel() {
    const settingsToggle = document.getElementById('settings-toggle');
    const settingsPanel = document.getElementById('settings-panel');
    
    settingsToggle?.addEventListener('click', () => {
      const isExpanded = settingsToggle.getAttribute('aria-expanded') !== 'false';
      settingsToggle.setAttribute('aria-expanded', String(!isExpanded));
      if (settingsPanel) settingsPanel.hidden = isExpanded;
    });
  }

  // ============================================
  // INIT
  // ============================================
  initNodeToggles();
  initHashNavigation();
  initProgressTracking();
  initStaticPrereqs();
  initPrereqBehavior();
  initSettingsPanel();
</script>


<style>
  .roadmap {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .section-title {
    font-size: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text);
    margin-bottom: 1.5rem;
    padding: 0.75rem 1rem;
    background-color: var(--color-bg-grid);
    border-left: 4px solid var(--color-copper);
    border-bottom: 1px solid var(--color-border);
  }

  .roadmap-track {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .roadmap-track::before {
    content: '';
    position: absolute;
    left: 7px;
    top: 0;
    bottom: 0;
    width: 2px;
    background-color: var(--color-copper);
  }

  .roadmap-node {
    position: relative;
    padding-left: 2rem;
  }

  .roadmap-node--optional {
    margin-left: 3rem;
  }

  .roadmap-node--optional::before {
    content: '';
    position: absolute;
    left: -2.5rem;
    top: 0.75rem;
    width: 2.5rem;
    height: 2px;
    border-top: 2px dashed var(--color-border);
  }

  .node-button {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    width: 100%;
    padding: 0.5rem 0;
    background: none;
    border: none;
    cursor: pointer;
    text-align: left;
    font-family: inherit;
  }

  .node-dot {
    position: absolute;
    left: 0;
    width: 16px;
    height: 16px;
    border: 2px solid var(--color-copper);
    border-radius: 50%;
    background-color: var(--color-bg);
    flex-shrink: 0;
  }

  .roadmap-node--optional .node-dot {
    border-style: dashed;
    border-color: var(--color-border);
  }

  .node-button:hover .node-dot {
    background-color: var(--color-copper);
  }

  .node-button[aria-expanded="true"] .node-dot {
    background-color: var(--color-copper);
  }

  .node-title {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-text);
  }

  .roadmap-node--optional .node-title {
    color: var(--color-text-muted);
  }

  .node-content {
    margin-top: 0.5rem;
    margin-left: 0;
    padding: 1rem;
    border: 1px solid var(--color-border);
    background: rgba(255, 255, 255, 0.5);
  }

  :global(.dark) .node-content {
    background: rgba(0, 0, 0, 0.3);
  }

  .node-description {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: 0.75rem;
  }

  /* Concepts */
  .node-concepts {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .concept-pill {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    background-color: var(--color-bg-grid);
    border: 1px solid var(--color-border);
    cursor: pointer;
    transition: opacity 0.15s, background-color 0.15s;
    user-select: none;
  }

  .concept-pill:hover {
    opacity: 0.7;
  }

  .concept-pill.concept--completed {
    text-decoration: line-through;
    opacity: 0.6;
  }

  .concept-pill.concept--important {
    background-color: rgba(255, 220, 100, 0.5);
    border-color: rgb(200, 170, 50);
  }

  :global(.dark) .concept-pill.concept--important {
    background-color: rgba(255, 200, 50, 0.3);
    border-color: rgb(180, 150, 40);
  }

  .concept-pill.concept--completed.concept--important {
    background-color: rgba(255, 220, 100, 0.3);
  }

  /* Resources */
  .node-resources {
    margin-top: 0.75rem;
    padding-top: 0.75rem;
    border-top: 1px dashed var(--color-border);
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.5rem;
  }

  .resources-label {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }

  .resource-link {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    background-color: var(--color-pcb);
    color: white;
    text-decoration: none;
  }

  .resource-link:hover {
    background-color: var(--color-pcb-light);
  }

  /* Prerequisites */
  .node-prereqs {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
  }

  .prereqs-label {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }

  .prereq-tag {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
  }

  .prereq-tag--link {
    background-color: var(--color-copper);
    color: white;
    border: 1px solid var(--color-copper);
    text-decoration: none;
    transition: box-shadow 0.15s, background-color 0.15s;
  }

  .prereq-tag--link:hover {
    box-shadow: 0 0 8px var(--color-copper-light);
    background-color: var(--color-copper-light);
  }

  .prereq-tag--static {
    background-color: rgba(184, 115, 51, 0.15);
    color: var(--color-text-muted);
    border: 1px dashed var(--color-copper);
    cursor: pointer;
    transition: opacity 0.15s;
  }

  .prereq-tag--static:hover {
    opacity: 0.7;
  }

  .prereq--completed {
    text-decoration: line-through;
    opacity: 0.7;
  }

  /* Outcomes */
  .node-outcomes {
    margin-bottom: 0.75rem;
  }

  .outcomes-label {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.75rem;
    color: var(--color-text-muted);
    display: block;
    margin-bottom: 0.25rem;
  }

  .outcomes-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .outcome-item {
    font-size: 0.8125rem;
    padding-left: 1.25rem;
    position: relative;
  }

  .outcome-item::before {
    content: "→";
    position: absolute;
    left: 0;
    color: var(--color-pcb);
  }

  /* Settings */
  .roadmap-settings {
    position: fixed;
    bottom: 1.5rem;
    right: 1.5rem;
    z-index: 100;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.5rem;
  }

  .settings-toggle {
    padding: 0.5rem 0.75rem;
    border: 1px solid var(--color-border);
    background-color: var(--color-bg);
    color: var(--color-text);
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.75rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .toggle-chevron {
    transition: transform 0.2s;
  }

  .settings-toggle[aria-expanded="false"] .toggle-chevron {
    transform: rotate(180deg);
  }

  .settings-toggle:hover {
    background-color: var(--color-bg-grid);
  }

  .settings-panel {
    padding: 0.75rem 1rem;
    border: 1px solid var(--color-border);
    background-color: var(--color-bg);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .prereq-link-setting {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.75rem;
  }

  .setting-label {
    color: var(--color-text-muted);
  }

  #prereq-link-behavior {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    border: 1px solid var(--color-border);
    background-color: var(--color-bg);
    color: var(--color-text);
    cursor: pointer;
  }

  /* Topic completion */
  .topic--completed .node-title {
    text-decoration: line-through;
    opacity: 0.6;
  }

  .topic--completed .node-dot {
    background-color: var(--color-pcb) !important;
    border-color: var(--color-pcb);
  }
</style>
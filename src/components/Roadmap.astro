    flex-shrink: 0;
  }

  .roadmap-node--optional .node-dot {
    border-style: dashed;
    border-color: var(--color-border);
  }

  .node-button:hover .node-dot {
    background-color: var(--color-copper);
  }

  .node-button[aria-expanded="true"] .node-dot {
    background-color: var(--color-copper);
  }

  .node-title {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-text);
  }

  .roadmap-node--optional .node-title {
    color: var(--color-text-muted);
  }

  .node-content {
    margin-top: 0.5rem;
    margin-left: 0;
    padding: 1rem;
    border: 1px solid var(--color-border);
    background: rgba(255, 255, 255, 0.5);
  }

  :global(.dark) .node-content {
    background: rgba(0, 0, 0, 0.3);
  }

  .node-description {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: 0.75rem;
  }


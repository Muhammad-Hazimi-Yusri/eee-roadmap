---
// src/components/Roadmap.astro

interface Props {
  sections: import('../types/roadmap').RoadmapSection[];
}

const { sections } = Astro.props;
---

<div class="roadmap">
  {sections.map((section) => (
    <div class="roadmap-section">
      <h3 class="section-title">{section.title}</h3>
      
      <div class="roadmap-track">
        {section.items.map((item, index) => (
          <div 
            class={`roadmap-node ${item.optional ? 'roadmap-node--optional' : ''}`}
            data-node-id={item.id}
          >
            <button class="node-button" aria-expanded="false">
              <span class="node-dot"></span>
              <span class="node-title">{item.title}</span>
            </button>
            
            <div class="node-content" hidden>
              <p class="node-description">{item.description}</p>
              {item.concepts && item.concepts.length > 0 && (
                <ul class="node-concepts">
                  {item.concepts.map((concept) => (
                    <li>{concept}</li>
                  ))}
                </ul>
              )}
              {item.resources && item.resources.length > 0 && (
              <div class="node-resources">
                <span class="resources-label">Resources:</span>
                {item.resources.map((r) => (
                  <a href={r.url} target="_blank" rel="noopener noreferrer">{r.label}</a>
                ))}
              </div>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>
  ))}
</div>

<script>
  document.querySelectorAll('.node-button').forEach((btn) => {
    btn.addEventListener('click', () => {
      const expanded = btn.getAttribute('aria-expanded') === 'true';
      const content = btn.nextElementSibling as HTMLElement;
      
      btn.setAttribute('aria-expanded', String(!expanded));
      content.hidden = expanded;
    });
  });
</script>


<style>
  .roadmap {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .section-title {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .roadmap-track {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  /* Vertical line connecting nodes */
  .roadmap-track::before {
    content: '';
    position: absolute;
    left: 7px;
    top: 0;
    bottom: 0;
    width: 2px;
    background-color: var(--color-copper);
  }

  .roadmap-node {
    position: relative;
    padding-left: 2rem;
  }

  /* Optional nodes - offset to the right */
  .roadmap-node--optional {
    margin-left: 3rem;
  }

  .roadmap-node--optional::before {
    content: '';
    position: absolute;
    left: -2.5rem;
    top: 0.75rem;
    width: 2.5rem;
    height: 2px;
    border-top: 2px dashed var(--color-border);
  }

  .node-button {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    width: 100%;
    padding: 0.5rem 0;
    background: none;
    border: none;
    cursor: pointer;
    text-align: left;
    font-family: inherit;
  }

  .node-dot {
    position: absolute;
    left: 0;
    width: 16px;
    height: 16px;
    border: 2px solid var(--color-copper);
    border-radius: 50%;
    background-color: var(--color-bg);
    flex-shrink: 0;
  }

  .roadmap-node--optional .node-dot {
    border-style: dashed;
    border-color: var(--color-border);
  }

  .node-button:hover .node-dot {
    background-color: var(--color-copper);
  }

  .node-button[aria-expanded="true"] .node-dot {
    background-color: var(--color-copper);
  }

  .node-title {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-text);
  }

  .roadmap-node--optional .node-title {
    color: var(--color-text-muted);
  }

  .node-content {
    margin-top: 0.5rem;
    margin-left: 0;
    padding: 1rem;
    border: 1px solid var(--color-border);
    background: rgba(255, 255, 255, 0.5);
  }

  :global(.dark) .node-content {
      background: rgba(0, 0, 0, 0.3);
    }

  .node-description {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: 0.75rem;
  }

  .node-concepts {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .node-concepts li {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    background-color: var(--color-bg-grid);
    border: 1px solid var(--color-border);
  }

  .node-resources {
    margin-top: 0.75rem;
    padding-top: 0.75rem;
    border-top: 1px dashed var(--color-border);
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.5rem;
  }
  
  .resources-label {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }
  
  .node-resources a {
    font-family: "IBM Plex Mono", monospace;
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    background-color: var(--color-pcb);
    color: white;
    text-decoration: none;
  }
  
  .node-resources a:hover {
    background-color: var(--color-pcb-light);
  }
</style>
---
const baseUrl = import.meta.env.BASE_URL;
---

<section class="section">
  <div class="container">
    <div class="mb-6">
      <p class="section-num">03</p>
      <h2 class="text-xl sm:text-2xl">Get Started</h2>
    </div>
    
    <p class="max-w-md text-muted mb-6">
      Pick a track and start. No signup required. Progress saves locally in your browser.
    </p>
    
    <div class="flex flex-wrap gap-4">
      <a href={`${baseUrl}roadmaps/fundamentals`} class="btn btn--primary">
        Begin with Fundamentals
      </a>
      <a href={`${baseUrl}roadmaps`} class="btn">
        Browse All Tracks
      </a>
    </div>
  </div>
</section>

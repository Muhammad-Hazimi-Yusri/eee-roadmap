---
// src/pages/roadmaps/[slug].astro

import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Placeholder from '../../components/Placeholder.astro';
import Roadmap from '../../components/Roadmap.astro';
import { fundamentalsRoadmap } from '../../data/fundamentals';

export function getStaticPaths() {
  return [
    { params: { slug: 'fundamentals' }, props: { title: 'Fundamentals', description: 'Circuit theory, engineering math, electromagnetism, and core building blocks.' }},
    { params: { slug: 'core' }, props: { title: 'Core Topics', description: 'Analog electronics, digital logic, signals & systems, and embedded basics.' }},
    { params: { slug: 'advanced' }, props: { title: 'Advanced', description: 'Power electronics, control systems, RF, and communications.' }},
  ];
}

const { slug } = Astro.params;
const { title, description } = Astro.props;
---

<Layout title={title}>
  <Header />
  <main>
    {slug === 'fundamentals' ? (
      <div class="container py-16">
        <p class="font-mono text-xs uppercase tracking-widest text-muted mb-2">
          // fundamentals track
        </p>
        <h1 class="text-2xl sm:text-3xl mb-2">{title}</h1>
        <p class="max-w-xl text-muted mb-8">{description}</p>
        
        <Roadmap sections={fundamentalsRoadmap} />
      </div>
    ) : (
      <Placeholder title={title} description={description} />
    )}
  </main>
  <Footer />
</Layout>
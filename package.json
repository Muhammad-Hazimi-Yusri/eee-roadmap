{
  "name": "eee-roadmap",
  "type": "module",
  "version": "0.19.2",
  "description": "Interactive roadmap for Electrical & Electronic Engineering education",
  "scripts": {
    "download:pdfs": "node scripts/download-pdfs.mjs",
    "postinstall": "node scripts/setup-pdfjs.mjs",
    "build:glossary": "node scripts/build-glossary.mjs",
    "build:search": "node scripts/build-search-index.mjs",
    "build:data": "node scripts/build-data.mjs && node scripts/build-glossary.mjs && node scripts/build-search-index.mjs && node scripts/build-graph-data.mjs",
    "validate": "node scripts/validate.mjs",
    "dev": "npm run build:data && npm run download:pdfs && astro dev",
    "dev:check": "npm run build:data && npm run validate && npm run test:run && npm run build && npm run check-links",
    "build": "npm run build:data && npm run download:pdfs && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "check-links": "npx linkinator ./dist",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:all": "vitest run && playwright test",
    "version:bump": "node scripts/bump-version.mjs",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/tailwind": "^5.1.0",
    "@lucide/astro": "^0.562.0",
    "@supabase/supabase-js": "^2.90.1",
    "astro": "^4.16.0",
    "cytoscape": "^3.33.1",
    "cytoscape-dagre": "^2.5.0",
    "fuse.js": "^7.1.0",
    "katex": "^0.16.27",
    "lucide": "^0.562.0",
    "marked": "^17.0.1",
    "marked-katex-extension": "^5.1.6",
    "tailwindcss": "^3.4.0",
    "tippy.js": "^6.3.7",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "electrical-engineering",
    "electronics",
    "education",
    "roadmap",
    "learning-path"
  ],
  "author": "Muhammad-Hazimi-Yusri",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/cytoscape": "^3.21.9",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "husky": "^9.1.7",
    "vitest": "^4.0.16",
    "yaml": "^2.8.2"
  }
}
